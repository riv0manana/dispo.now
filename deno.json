{
  "tasks": {
    "test": "deno test --allow-env --allow-read",
    "test:e2e": "DATABASE_URL=postgres://user:pass@localhost:5432/db NODE_ENV=test deno test --no-check -A app/tests/",
    "start": "deno run --allow-env --allow-read --allow-net --watch app/server.ts",
    "db:migrate": "deno run -A scripts/migrate.ts",
    "db:seed": "deno run -A scripts/seed_user.ts",
    "db:generate": "deno run -A npm:drizzle-kit generate:pg --config=drizzle.config.ts",
    "build:frontend": "cd frontend && npm install --legacy-peer-deps && npm run build"
  },
  "imports": {
    "hono": "npm:hono@^4.0.0",
    "drizzle-orm": "npm:drizzle-orm@^0.29.3",
    "drizzle-kit": "npm:drizzle-kit@^0.20.14",
    "postgres": "npm:postgres@^3.4.3",
    "bcryptjs": "npm:bcryptjs@^2.4.3",
    "sqlite": "jsr:@db/sqlite@^0.11.0",
    "ioctopus": "npm:@evyweb/ioctopus@^1.3.1",
    "zod": "npm:zod@^3.22.4",
    "std/": "https://deno.land/std@0.216.0/",
    "@/core/": "./core/",
    "@/infra/": "./core/infrastructure/",
    "@/app/": "./app/",
    "@/container/": "./core/container/"
  },
  "compilerOptions": {
    "strict": true
  }
}
