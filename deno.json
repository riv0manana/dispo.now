{
  "tasks": {
    "test": "NODE_ENV=test JWT_SECRET=ci_test_secret DATABASE_URL=postgres://user:pass@localhost:5432/db deno test --allow-env --allow-read --no-check core/tests",
    "test:e2e": "NODE_ENV=test DATABASE_URL=postgres://user:pass@localhost:5432/db JWT_SECRET=ci_test_secret deno test --no-check -A app/tests/",
    "start": "NODE_ENV=development deno run --allow-env --allow-read --allow-net --watch app/server.ts --trace-leaks",
    "start:prod": "deno run --allow-env --allow-read --allow-net app/server.ts",
    "db:migrate": "deno run -A scripts/migrate.ts",
    "db:seed": "deno run -A scripts/seed_user.ts",
    "db:generate": "deno run -A npm:drizzle-kit generate:pg --config=drizzle.config.ts",
    "build:frontend": "cd frontend && npm install --legacy-peer-deps && npm run build"
  },
  "imports": {
    "@hono/swagger-ui": "jsr:@hono/swagger-ui@^0.5.3",
    "hono": "npm:hono@^4.0.0",
    "drizzle-orm": "npm:drizzle-orm@^0.29.3",
    "drizzle-kit": "npm:drizzle-kit@^0.20.14",
    "postgres": "npm:postgres@^3.4.3",
    "bcryptjs": "npm:bcryptjs@^2.4.3",
    "sqlite": "jsr:@db/sqlite@^0.11.0",
    "ioctopus": "npm:@evyweb/ioctopus@^1.3.1",
    "zod": "npm:zod@^3.22.4",
    "std/": "https://deno.land/std@0.216.0/",
    "@/core/": "./core/",
    "@/infra/": "./core/infrastructure/",
    "@/app/": "./app/",
    "@/container/": "./core/container/"
  },
  "compilerOptions": {
    "strict": true
  },
  "nodeModulesDir": "auto"
}
